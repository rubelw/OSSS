{
  "$schema": "https://osss.ai/schemas/graph-patterns.schema.json",
  "patterns": {
    "standard": {
      "description": "Default flow: refiner -> final -> END",
      "entry_point": "refiner",
      "edges": [
        {
          "from": "refiner",
          "to": "final"
        },
        {
          "from": "final",
          "to": "END"
        }
      ]
    },
    "data_query": {
      "description": "Data-centric flow: refiner -> data_query -> (historian for CRUD) -> END",
      "entry_point": "refiner",
      "conditional_edges": {
        "data_query": "route_after_data_query"
      },
      "conditional_destinations": {
        "data_query": {
          "historian": "historian",
          "END": "END"
        }
      },
      "edges": [
        {
          "from": "refiner",
          "to": "data_query"
        },
        {
          "from": "historian",
          "to": "END",
          "when": "has('historian')"
        }
      ]
    }
  }
}
