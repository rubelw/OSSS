# -------------------------------
# OSSS Web Feature Flags
# -------------------------------

# Activities & Events
NEXT_PUBLIC_FEATURE_ACTIVITIES=false

# School Board
NEXT_PUBLIC_FEATURE_SCHOOL_BOARD=false

# Student Information System (SIS)
NEXT_PUBLIC_FEATURE_SIS=false

# Facilities
NEXT_PUBLIC_FEATURE_FACILITIES=false

# Transportation
NEXT_PUBLIC_FEATURE_TRANSPORTATION=false

# Finance
NEXT_PUBLIC_FEATURE_FINANCE=false

# Parent Communications
NEXT_PUBLIC_FEATURE_PARENT_COMMUNICATIONS=false

# Human Resources
NEXT_PUBLIC_FEATURE_HUMAN_RESOURCES=false


# Where your OpenAI-compatible / FastAPI lives
TARGET_HOST=http://host.docker.internal:8081

# Rasa service
RASA_URL=http://rasa-mentor:5005

# Optional: override safety endpoint (otherwise uses TARGET_HOST + /v1/chat/safe)
SAFE_BASE=http://host.docker.internal:8081
# SAFE_PATH=/v1/chat/safe
#SAFE_PATH=/v1/chat/completions
SAFE_PATH=/ai/chat/rag

# Tutor base (same semantics as in server.js)
# If omitted, we'll build it from TARGET_HOST + /tutor
TUTOR_HOST=http://host.docker.internal:8081/tutor


NODE_EXTRA_CA_CERTS=/app/certs/keycloak-ca.crt


# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=password
AUTH_SECRET=password
NEXT_PUBLIC_OSSS_API_BASE=http://127.0.0.1:8081
NEXT_PUBLIC_KEYCLOAK_BASE=https://keycloak:8443
NEXT_PUBLIC_KEYCLOAK_REALM=OSSS
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=osss-web


# Keycloak (adjust host/realm/client)
KEYCLOAK_ISSUER=https://keycloak.local:8443/realms/OSSS
KEYCLOAK_BASE_URL=https://keycloak.local:8443
KEYCLOAK_REALM=OSSS
WEB_KEYCLOAK_CLIENT_ID=osss-web
WEB_KEYCLOAK_CLIENT_SECRET=password

# Your FastAPI base (the proxy uses this)
OSSS_API_URL=http://127.0.0.1:8081

# Auth.js v5
AUTH_SECRET=your-long-random-string
AUTH_TRUST_HOST=1
AUTH_URL=http://localhost:3000

POST_LOGOUT_REDIRECT_URI=http://localhost:3000/

REDIS_URL='redis://localhost:6379'
