{
  "$schema": "https://typedoc.org/schema.json",
  "entryPointStrategy": "expand",
  "entryPoints": [
    "src/osss-web/components",
    "src/osss-web/types"
  ],
  "tsconfig": "src/osss-web/tsconfig.typedoc.json",
  "plugin": ["typedoc-plugin-markdown"],
  "readme": "none",
  "out": "docs/api/web",
  "hideBreadcrumbs": true,
  "hidePageTitle": true,
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeExternals": true,
  "exclude": [
    "**/.next/**",
    "**/node_modules/**",
    "**/dist/**",
    "src/osss-web/app/**",             // exclude app/ (Pages & Route Handlers)
    "src/osss-web/app/pages/**"
  ]
}
